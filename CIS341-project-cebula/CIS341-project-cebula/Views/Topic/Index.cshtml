@model Models.TopicDetailViewModel
@{
    ViewData["Title"] = "Topic Page";
}
<!--Load partial for topic-->
<partial name="../Shared/_Topic.cshtml" model="Model.Topic"/>
<!--Load partial for each post-->
@if (Model.Posts.Count() > 0)
{
    @foreach (var post in Model.Posts)
    {
        <partial name="../Shared/_Post.cshtml" model="@post" />
    }
}
else
{
    <h4 class="text-white mt-4 mb-4 d-inline-block">@Model.Topic.Topic.Title has no posts</h4>
}
<!--Load partial for modal-->
<partial name="../Shared/_DeleteModal.cshtml" />

